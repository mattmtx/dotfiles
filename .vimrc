syntax on
set tabstop=4
set pastetoggle=<f5>
set expandtab
set shiftwidth=4
set ignorecase
" Show the cursor position
set ruler
" Enable mouse in all modes
" set mouse=a
" Show “invisible” characters
" set lcs=tab:▸\ ,trail:·,eol:¬,nbsp:_
" set list
" Use the Solarized Dark theme
set background=dark
" colorscheme solarized
let g:solarized_termtrans=1
